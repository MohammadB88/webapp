pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
              checkout([$class: 'GitSCM', 
                branches: [[name: '*/main']],
                extensions: [
                    [$class: 'SparseCheckoutPaths', 
                    sparseCheckoutPaths:[[$class:'SparseCheckoutPath', path:'/jenkins/script']]]
                    ],
                userRemoteConfigs: [[url: 'https://github.com/naiveskill/devops.git']]])
              sh "ls -ltr"
          }
        }

        stage('build image') {
      	  steps {
	          script {
	            sh "docker build -t mohammad67/test:${BUILD_NUMBER} -f ./fullstack/nginx ."
	          }
	        }
        }

        stage('test') {
	        steps {
           sh 'echo Hello from Test Section'
	        }
        }

        stage('push image') {
	        steps {
            script {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'pass', usernameVariable: 'user')]){
                    sh 'docker login -u$user -p$pass'
                    sh 'docker push mohammad67/test:${BUILD_NUMBER}'
                }
        	    }
	          }
	        }
        }

        stage('deploy') {
          steps {
            sh 'echo Hello from Deploy Section'
          }
        }
    }
}
